{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "color": {
            "defaultPalette": false,
            "palette": [
                { "slug": "ss-white", "color": "rgb(255,255,255)", "name": "SS White"},
                { "slug": "ss-gray-100", "color": "rgb(243 244 246)", "name": "SS Gray 100" },
                { "slug": "ss-gray-200", "color": "rgb(229 231 235)", "name": "SS Gray 200" },
                { "slug": "ss-gray-300", "color": "rgb(209 213 219)", "name": "SS Gray 300" },
                { "slug": "ss-gray-400", "color": "rgb(156 163 175)", "name": "SS Gray 400" },
                { "slug": "ss-gray-500", "color": "rgb(107 114 128)", "name": "SS Gray 500" },
                { "slug": "ss-gray-600", "color": "rgb(75 85 99)", "name": "SS Gray 600" },
                { "slug": "ss-gray-700", "color": "rgb(55 65 81)", "name": "SS Gray 700" },
                { "slug": "ss-gray-800", "color": "rgb(31 41 55)", "name": "SS Gray 800" },
                { "slug": "ss-gray-900", "color": "rgb(17 24 39)", "name": "SS Gray 900" },
                { "slug": "ss-primary", "color": "rgb(239 68 68)", "name": "SS Primary" },
                { "slug": "ss-accent", "color": "rgb(67 56 202)", "name": "SS Accent" },
                { "slug": "ss-success", "color": "rgb(52 211 153)", "name": "SS Success" },
                { "slug": "ss-info", "color": "rgb(96 165 250)", "name": "SS Info" },
                { "slug": "ss-warning", "color": "rgb(251 146 60)", "name": "SS Warning" },
                { "slug": "ss-danger", "color": "rgb(236 72 153)", "name": "SS Danger" }
            ],
            "background": true,
            "text": true,
            "link": true,
            "custom": true,
            "duotone": [
                { "slug": "ss-pink-sunset", "colors": ["#11245e", "#dc4379"], "name": "SS Pink Sunset"}
            ],
            "defaultGradients": false,
            "gradients": [
                { "slug": "ss-summer-dog", "name": "SS Summer Dog", "gradient": "linear-gradient(#a8ff78, #78ffd6)"}
            ]
        }, 
        "blocks": {
            "core/site-title": {
                "color": {
                    "defaultPalette": true,
                    "palette": [
                        {"slug": "ss-primary", "color": "#ef4444", "name": "SS Primary"}
                    ],
                    "link": true,
                    "custom": false,
                    "gradients": [],
                    "customGradient": false
                },
                "typography": {
                    "fontFamilies": [
                        {
                            "fontFamily": "Pacifico, san-serif",
                            "slug": "ss-pacifico",
                            "name": "SS Pacifico"
                        }
                    ]
                }
            },
            "core/cover": {
                "color": {
                    "duotone": [],
                    "customDuotone": false
                }
            },
            "core/preformatted": {
                "typography": {
                    "fontSizes": [],
                    "customFontSize": false
                }
            }
        },
        "border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "Rubik, san-serif",
                    "slug": "ss-rubik",
                    "name": "SS Rubik"
                }
            ],
            "fontSizes": [
                { "slug": "small", "size": "0.75rem", "name": "Small"},
                { "slug": "medium", "size": "1.25rem", "name": "Medium"},
                { "slug": "large", "size": "2.25rem", "name": "Large"},
                { "slug": "x-large", "size": "3rem", "name": "Extra Large"},
                { "slug": "gigantic", "size": "3.75rem", "name": "Gigantic"}
            ],
            "lineHeight": true,
            "dropCap": true,
            "fontWeight": true,
            "fontStyle": true,
            "textTransform": true,
            "letterSpacing": true,
            "textDecoration": true
        },
        "layout": {
            "contentSize": "800px", 
            "wideSize": "1100px"
        },
        "spacing": {
            "margin": true,
            "padding": true,
            "units": [
                "px",
                "rem", 
                "vh",
                "vw",
                "%"
            ],
            "blockGap": true
        }
    },
    "styles": {
        "color": {
            "text": "var(--wp--preset--color--ss-gray-700)",
            "background": "var(--wp--preset--color--ss-white)"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color-ss-primary)"
                }
            }
        },
        "blocks": {
            "core/button": {
                "color": {
                    "gradient": "var(--wp--preset--gradient--ss-summer-dog)"
                }
            },
            "core/pullquote": {
                "border": {
                    "width": "2px",
                    "radius": "10px",
                    "style": "solid",
                    "color": "var(--wp--preset--color--ss-primary)"
                }
            },
            "core/site-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--ss-pacifico"
                }
            }
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--ss-rubik)",
            "fontSize": "16px",
            "fontStyle": "normal",
            "fontWeight": "normal",
            "lineHeight": "inherit",
            "textDecoration": "none",
            "textTransform": "none"
        },
        "spacing": {
            "margin": {
                "top": "0px",
                "bottom": "0px",
                "left": "0px",
                "right": "0px"
            },
            "padding": {
                "top": "0px",
                "bottom": "0px",
                "left": "0px",
                "right": "0px"
            },
            "blockGap": "4rem"
        }
    }
}  